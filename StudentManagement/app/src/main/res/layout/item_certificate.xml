<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Thông tin chứng chỉ và nút chi tiết và xóa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên chứng chỉ -->
            <TextView
                android:id="@+id/tvCertificateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certificate Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Ngày cấp -->
            <TextView
                android:id="@+id/tvIssueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Issue"
                android:textSize="16sp" />

            <!-- Ngày hết hạn -->
            <TextView
                android:id="@+id/tvExpiryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration Date"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Các nút thao tác -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDetailCertificate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:backgroundTint="#3399FF"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnDeleteCertificate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:backgroundTint="#E53935"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider để ngăn cách các item -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="8dp" />
</LinearLayout>
