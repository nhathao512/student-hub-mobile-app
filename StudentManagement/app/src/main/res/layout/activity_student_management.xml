<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".StudentManagementActivity">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý Sinh viên"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp" />

    <!-- Nút chức năng -->
    <Button
        android:id="@+id/btnViewStudentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiển thị danh sách sinh viên"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btnAddStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm sinh viên"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btnEditStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin sinh viên"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btnSearchStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm sinh viên"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btnStudentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin chi tiết sinh viên"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btnManageCertificates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý chứng chỉ"
        android:layout_margin="10dp" />

</LinearLayout>